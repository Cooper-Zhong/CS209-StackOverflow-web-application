<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <property name="LOG_PATTERN" value="%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 输出到控制台 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--    颜色-->
            <pattern> %d{yyyy-MM-dd HH:mm:ss} [%thread] %magenta(%-5level) %green([%-50.50class]) >>> %cyan(%msg) %n</pattern>
        </encoder>
    </appender>

    <!-- 按天生成INFO和WARN级别的日志文件 -->
    <appender name="infoFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                LogFile/%d{yyyy-MM-dd}/info-%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level -%msg%n
            </Pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="warnErrorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                LogFile/%d{yyyy-MM-dd}/warn-error-%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level -%msg%n
            </Pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 按天生成ERROR和DEBUG级别的日志文件 -->
    <appender name="debugFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                LogFile/%d{yyyy-MM-dd}/debug-%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level -%msg%n
            </Pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="errorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                LogFile/%d{yyyy-MM-dd}/error-%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level -%msg%n
            </Pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!--按天生成日志,即一天只生成一个文件夹和一个日志文件-->
    <appender name="logFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                LogFile/%d{yyyy-MM-dd}/%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level -%msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- 针对com.framework.job包的logger -->
    <logger name="com.framework.job" additivity="false">
        <appender-ref ref="console"/>
        <!--        <appender-ref ref="infoWarnLogFile"/>-->
        <!--        <appender-ref ref="errorDebugLogFile"/>-->
        <appender-ref ref="infoFile"/>
        <appender-ref ref="warnErrorFile"/>
        <!--        <appender-ref ref="errorFile"/>-->
        <appender-ref ref="debugFile"/>
        <appender-ref ref="logFile"/>
        <!--        <appender-ref ref="infoFile"/>-->
    </logger>

    <!-- 项目的整体的日志打印级别为info -->
    <root level="info">
        <appender-ref ref="console"/>
        <!--        <appender-ref ref="infoWarnLogFile"/>-->
        <!--        <appender-ref ref="errorDebugLogFile"/>-->
        <appender-ref ref="infoFile"/>
        <appender-ref ref="warnErrorFile"/>
        <!--        <appender-ref ref="errorFile"/>-->
        <appender-ref ref="debugFile"/>
        <appender-ref ref="logFile"/>
        <!--        <appender-ref ref="infoFile"/>-->
    </root>

    <!-- 设置特定包或类的日志级别为 DEBUG -->
    <logger name="cn.sustech.cs209backend" level="debug"/>
</configuration>
